<?xml version="1.0" encoding="UTF-8"?>
<api xmlns="http://ws.apache.org/ns/synapse"
     name="getEmployeeByIDAPI"
     context="/customer">
   <resource methods="POST" uri-template="/view">
      <inSequence>
         <payloadFactory media-type="xml">
            <format>
               <p:getEmployeeByID xmlns:p="www.wso2.org/dss">
                  <b:empID xmlns:b="www.wso2.org/dss">$1</b:empID>
               </p:getEmployeeByID>
            </format>
            <args>
               <arg evaluator="json" expression="$.empID"/>
            </args>
         </payloadFactory>
         <call>
            <endpoint>
               <address uri="http://10.100.5.175:9773/services/SampleDataSource/getEmployeeByID"
                        format="soap12"/>
            </endpoint>
         </call>
         <property xmlns:ns1="www.wso2.org/dss"
                   name="FirstName"
                   expression="//ns1:return/ns2:FirstName"/>
         <property xmlns:ns1="www.wso2.org/dss"
                   name="LastName"
                   expression="//ns1:return/ns2:LastName"/>
         <property xmlns:ns1="www.wso2.org/dss"
                   name="Team"
                   expression="//ns1:return/ns2:Team"/>
         <property name="messageType" value="application/json" scope="axis2"/>
         <respond/>
      </inSequence>
   </resource>
   <handlers>
      <handler class="org.wso2.handler.SimpleOauthHandler"/>
   </handlers>
</api>
